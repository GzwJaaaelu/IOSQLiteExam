<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_margin="16dp"
                                    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/tv_goods_avatar_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"/>

        <TextView
            android:id="@+id/tv_goods_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_toRightOf="@id/tv_goods_avatar_url"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_introduction"
            android:layout_toRightOf="@id/tv_goods_avatar_url"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_goods_remaining_Quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_introduction"
            android:layout_toRightOf="@id/tv_goods_price"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tv_goods_add_to_cart_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/tv_goods_avatar_url"
            android:gravity="right"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>